<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tucompualdia.app.incluapp.PerfilActivity">

    <TextView android:text="@string/titulo_perfil" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tituloPerfil"
        android:capitalize="characters"
        android:textSize="35dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/executive"
        android:contentDescription="@string/perfilImage"
        android:layout_below="@+id/tituloPerfil"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textoPrueba"
        android:id="@+id/textView2"
        android:layout_below="@+id/tituloPerfil"
        android:layout_toRightOf="@+id/tituloPerfil"
        android:layout_toEndOf="@+id/tituloPerfil" />

</RelativeLayout>
